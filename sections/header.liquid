<!--Sections are like snippets but you can add settings
This section can replace the header snippet and be more powerful
Use render for snippets and section for sections -->

<header class="header">
  <h1>Coding with {{ shop.name }}</h1>

  <ul>
    <!-- Main menu -->
    {% for link in linklists.main-menu.links -%}
      <li>{{ link.title | link_to: link.url }}</li>
    {%- endfor %}
  </ul>

  {% if section.settings.show_search %}

    <form action="/search">
      <input type="search" name="q">
      <button type="submit">Search</button>
    </form>

  {% endif %}

</header>

<style>
    .header {
        background: {{ section.settings.bg }};
    }
</style>

{% stylesheet %}
    .header {
        padding: 20px;
    }
{% endstylesheet %}

{% javascript %}
    console.log('hello ')
    
{% endjavascript %}

{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_search",
        "label": "Show Search form?"
      }, {
        "type": "color",
        "id": "bg",
        "label": "Background Color"
      }
    ]
  }
{% endschema %}